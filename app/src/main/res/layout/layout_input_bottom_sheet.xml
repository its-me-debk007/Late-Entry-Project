<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/horizontalBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_horizontal_bar" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/studentNoTextInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:paddingBottom="5dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxStrokeColor="@color/custom_blue"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1dp"
        app:helperText=" "
        app:helperTextTextAppearance="@font/source_sans_pro_semibold"
        app:helperTextTextColor="#F13A3A"
        app:hintEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontalBar">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/studentNo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:hint="  Student No."
            android:maxLength="15"
            android:imeOptions="actionGo"
            android:inputType="number"
            android:padding="16dp"
            android:paddingEnd="91dp"
            android:textColor="#242E42"
            android:textColorHint="#BDC0C6"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/okButton"
        android:layout_width="74dp"
        android:layout_height="0dp"
        android:layout_marginBottom="29dp"
        android:background="@drawable/ok_button_curved_edge"
        android:enabled="false"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="OK"
        android:textColor="#6882EF"
        android:textSize="20sp"
        app:backgroundTint="@color/custom_blue"
        app:layout_constraintBottom_toBottomOf="@+id/studentNoTextInputLayout"
        app:layout_constraintEnd_toEndOf="@+id/studentNoTextInputLayout"
        app:layout_constraintTop_toTopOf="@+id/studentNoTextInputLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
