<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/venue"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:stateListAnimator="@null"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="@color/custom_blue"
            app:strokeColor="#DCDDE2"
            app:strokeWidth="1dp" />

        <ImageView
            android:visibility="invisible"
            android:id="@+id/icCheckCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/venue"
            app:layout_constraintEnd_toEndOf="@+id/venue"
            app:layout_constraintTop_toTopOf="@+id/venue"
            app:srcCompat="@drawable/ic_check_circle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
