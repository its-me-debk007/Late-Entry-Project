<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LateEntryProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/custom_blue</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="colorControlActivated">@color/custom_blue</item>
        <item name="android:textAllCaps">false</item>

        <!-- For Popup Menu-->
        <item name="popupMenuStyle">@style/popupMenuBackground</item>
        <item name="textAppearanceLargePopupMenu">@style/popupMenuTextView</item>

        <!-- Change Overflow Menu ListView Item Height -->
        <!--        <item name="android:listPreferredItemHeightSmall">30dp</item>-->
    </style>

    <!-- Change Overflow Menu ListView Text Size and Text Size -->
    <style name="popupMenuTextView" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#242E42</item>
    </style>

    <!-- Change popup menu border Radius -->
    <style name="popupMenuBackground" parent="Widget.MaterialComponents.PopupMenu.ListPopupWindow">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--Background Color-->
        <item name="android:background">@color/darkBrown</item>
        <!--Buttons Colors-->
        <item name="colorAccent">@color/colorPrimary</item>
        <!--Title and Messages Color-->
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="snackbar_style" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:radius">32dp</item>
    </style>

    <style name="snackbar_button" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="backgroundTint">@color/darkSnackbar</item>
        <item name="android:text">@string/ok_btn_snackbar</item>
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
    </style>

    <style name="snackbar_text" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
    </style>
</resources>